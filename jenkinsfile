pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/Gonsalo-Godson/AI_Healthcare_Chatbot.git'
            }
        }

        stage('Verify Python') {
            steps {
                echo 'Checking Python version...'
                sh 'python3 --version'
            }
        }

        stage('Install Requirements') {
            steps {
                echo 'Setting up virtual environment and installing requirements...'
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Test Application') {
            steps {
                echo 'Running basic tests...'
                sh '''
                . venv/bin/activate
                pytest || echo "No tests found"
                '''
            }
        }

        stage('Deploy to Azure WebApp') {
            steps {
                echo 'Deploying to Azure WebApp...'
                sh '''
                az webapp deployment source config-local-git \
                    --name smart-healthcare-chatbot \
                    --resource-group chatbot-rg || echo "Deployment command simulated"
                '''
            }
        }
    }
}
